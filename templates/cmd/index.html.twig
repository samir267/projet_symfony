{% extends 'base.html.twig' %}
{% block title%} Liste des Commandes{% endblock %}

{% block body %}
<h2>liste des commandes</h2>
  <a href="{{ path('new_commande')}}" class="btn btn-primary" style="float:right"> ajouter une commande</a>

 {% if cmds %}
    <table id="commande" class="table table-striped">
      <thead>
       
        <tr>
          <th>id</th>
          <th>nul_cde</th>
          <th>date_cde</th>
          <th>heure_cde</th>
          <th>remise_cde</th>
          <th>mnt_cde</th>
          <th>code_clt_cde</th>
          <th>actions</th>


          
        </tr>
      </thead>
      <tbody>
        {% for commande in cmds %}
          <tr>
            <td>{{ commande.id}}</td>
            <td>{{ commande.getNulCde()}}</td>
            <td>{{ commande.getDateCde()|date('Y-M-D')}}</td>
            <td>{{ commande.getHeureCde()|date('H:i:s')}}</td>
            <td>{{ commande.getRemiseCde()}}</td>
            <td>{{ commande.getMntCde()}}</td>
            <td>{{ commande.getCodeCltCde().id}}</td>
            <td>
            <a href="/commande/edit/{{ commande.id }}" class="btn btn-outline-primary">Editer</a>
            <a href="/commande/delete/{{ commande.id }}" class="btn btn-outline-danger" 
              onclick="return confirm('Etes-vous sÃ»r de supprimer cet article?');">Supprimer</a>

            </td>

            
           

          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Aucun commande</p>
  {% endif %} 
  
{% endblock %}


